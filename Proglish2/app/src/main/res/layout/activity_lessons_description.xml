<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 1. Переменная -->
        <TextView
            android:id="@+id/explanation_variable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Переменная – это именованная область памяти, предназначенная для хранения данных."
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/example_variable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="int age = 25;\nString name = 'Алексей';"
            android:textSize="14sp"
            android:typeface="monospace"
            android:paddingBottom="16dp" />

        <!-- 2. Функция -->
        <TextView
            android:id="@+id/explanation_function"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Функция – это блок кода, выполняющий определённую задачу."
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/example_function"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="static void greet() {\n    System.out.println('Привет, мир!');\n}\n\npublic static void main(String[] args) {\n    greet();\n}"
            android:textSize="14sp"
            android:typeface="monospace"
            android:paddingBottom="16dp" />

        <!-- 3. Метод -->
        <TextView
            android:id="@+id/explanation_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Метод – это функция, которая принадлежит классу или объекту."
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/example_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="public class Person {\n    String name;\n\n    void sayHello() {\n        System.out.println('Привет, меня зовут ' + name);\n    }\n}\n\npublic class Main {\n    public static void main(String[] args) {\n        Person p = new Person();\n        p.name = 'Анна';\n        p.sayHello();\n    }\n}"
            android:textSize="14sp"
            android:typeface="monospace"
            android:paddingBottom="16dp" />

        <!-- 4. Параметр -->
        <TextView
            android:id="@+id/explanation_parameter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Параметр – это переменная, принимаемая функцией при вызове."
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/example_parameter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="static void greet(String name) {\n    System.out.println('Привет, ' + name + '!');\n}\n\ngreet('Дмитрий');"
            android:textSize="14sp"
            android:typeface="monospace"
            android:paddingBottom="16dp" />

        <!-- 5. Аргумент -->
        <TextView
            android:id="@+id/explanation_argument"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Аргумент – это конкретное значение, передаваемое в параметр функции при вызове."
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/example_argument"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="greet('Анна');  // 'Анна' – аргумент"
            android:textSize="14sp"
            android:typeface="monospace"
            android:paddingBottom="16dp" />

        <!-- 6. Return -->
        <TextView
            android:id="@+id/explanation_return"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Return – это ключевое слово, используемое в функциях для возврата результата."
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/example_return"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="static int sum(int a, int b) {\n    return a + b;\n}"
            android:textSize="14sp"
            android:typeface="monospace"
            android:paddingBottom="16dp" />

        <!-- 7. Тип данных -->
        <TextView
            android:id="@+id/explanation_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Тип данных – это характеристика, определяющая, какие данные может хранить переменная."
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/example_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="int number = 10;\ndouble price = 5.99;\nchar letter = 'A';"
            android:textSize="14sp"
            android:typeface="monospace"
            android:paddingBottom="16dp" />

        <!-- 8. Класс -->
        <TextView
            android:id="@+id/explanation_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Класс – это шаблон, по которому создаются объекты."
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <!-- 9. Объект -->
        <TextView
            android:id="@+id/explanation_object"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Объект – это экземпляр класса, содержащий данные и методы."
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <!-- 10. Наследование -->
        <TextView
            android:id="@+id/explanation_inheritance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Наследование – это механизм, позволяющий классу-наследнику получать свойства и методы родительского класса."
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <!-- Кнопка для продолжения -->
        <Button
            android:id="@+id/continue_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Продолжить"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
